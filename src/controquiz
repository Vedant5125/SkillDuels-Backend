import Quiz from '../models/Quiz';

// Show all the groups of questions (Technical, Aptitude, etc.)
const getCategories = async (req, res) => {
  try {
    const categories = await Quiz.distinct('category');
    res.status(200).json(categories);
  } catch (error) {
    res.status(500).json({ message: 'Could not find the categories!' });
  }
};

// This is for the Boss (Admin) to add new questions
const addQuestion = async (req, res) => {
  try {
    const newQuestion = new Quiz(req.body);
    await newQuestion.save();
    res.status(201).json({ message: 'New question added to the toy box!' });
  } catch (error) {
    res.status(400).json({ message: 'Question was broken!' });
  }
};

module.exports = { getCategories, addQuestion };
